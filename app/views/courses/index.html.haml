%h1 Courses
= link_to 'New Course', new_course_url
%ul
    - @courses.each do |course|
        %li
        = image_tag course.image.thumb.url
        -# = course.image.url ? image_tag course.image.url : nill
        = course.title
        = link_to 'Edit', edit_course_path(course)
        = link_to 'Delete', course_path(course), method: :delete, data: {confirm: 'You Sure?'}
= paginate @courses
